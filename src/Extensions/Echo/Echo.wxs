            </Component>
        </DirectoryRef>

        <DirectoryRef Id="ResourcesFolder" FileSource="$(var.GallioTargetDir)\bin\Resources\">
            <Component Id="Gallio.Echo.Resources" Guid="{12D947CF-B41D-414f-8434-DEB0EF0F5786}" Win64="$(var.Win64Binary)">
